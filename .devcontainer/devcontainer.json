	"dockerComposeFile": "docker-compose.yml",
	"service": "t3-practice",
	"workspaceFolder": "/workspace",
	"settings": {
		"workbench.colorCustomizations": {
			"activityBar.background": "#474747"
		}
	},
	"extensions": [
		"eamodio.gitlens"
    ],
